<resources xmlns:ns1="http://schemas.android.com/apk/res-auto">
    <!-- Splash screen theme. -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimationDuration">200</item>
        <item name="windowSplashScreenBackground">@color/purple_500</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_foreground</item>

        <item name="postSplashScreenTheme">@style/Theme.BedApp</item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.BedApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black_800</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="chipStyle">@style/Theme.BedApp.ChipGroup</item>
    </style>

    <style name="Theme.BedApp.ChipGroup" parent="Widget.Material3.Chip.Filter">
        <item name="checkedIconTint">@color/chip_text_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="chipStrokeColor">@android:color/transparent</item>
        <item name="chipBackgroundColor">@color/chip_background_color</item>
    </style>

</resources>